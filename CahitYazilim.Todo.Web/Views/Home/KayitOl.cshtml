@model AppUserAddDto
@{
    ViewData["Title"] = "KayitOl";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="KayitOl" method="post" class="bg-primary text-white pt-5 w-75 mx-auto p-3 shadow">
    <h3 class="text-center"  style="font-family: 'Yatra One', cursive !important;">Hesap Oluştur</h3>
    <div class="form-group">
        <label asp-for="@Model.Name">Adınız :</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname">Soyadınız :</label>
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
        <input asp-for="@Model.Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Email :</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password">Parola :</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword">Parola Tekrar:</label>
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.UserName">Kullanıcı Adı:</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <a asp-action="Index" class="btn btn-warning btn-sm mr-2 mt-2">Vazgeç</a>
    <button type="submit" class=" btn btn-info btn-sm mt-2">Kayıt Ol</button>


</form>


